                        "name": "Note",
                        "required": true,
                        "schema": {
                            "properties": {
                                "data": {
                                    "$ref": "#/definitions/Note"
                                }
                            },
                            "type": "object"
                        }
                    }
                ],
                "description": "Create a Note",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "a json Object with Note Array and information of total count",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "description": "ID of the newly created Note"
                                }
                            }
                        }
                    }
                },
                "summary": "create new Note"
            }
        },
        "/data/Note/{id}": {
            "get": {
                "operationId": "getSingleNote",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "string",
                        "required": true,
                        "description": "The id of the record to be fetched"
